@model List<CRUDEXAM.Models.Producto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de Productos</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success bt-sm" asp-action="Producto_Detalle" asp-controller="Home" asp-route-idProducto="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre Producto</th>
                    <th>Descripcion del Producto</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Fecha de Creacion</th>
                    <th>Categoria</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreProd</td>
                        <td>@item.DescripcionProd</td>
                        <td>@item.Stock</td>
                        <td>@item.Precio</td>
                        <td>@item.FechaCreacionProd</td>                       
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Producto_Detalle" asp-controller="Home" asp-route-idProducto="@item.IdProducto">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idProducto="@item.IdProducto">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

