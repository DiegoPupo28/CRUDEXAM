@model CRUDEXAM.Models.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProducto.IdProducto == 0)
{
    <h1>Crear Producto</h1>
}
else
{
    <h1>Editar Producto</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Producto_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.IdProducto" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.NombreProd">Nombre De Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.NombreProd" type="text" />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.DescripcionProd">Descripcion de Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.DescripcionProd" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Stock">Stock</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Stock" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Precio" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.FechaCreacionProd">Fecha de Creacion de Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.FechaCreacionProd" type="text" disabled/>
            </div>


            <div class="mb-2">
                @if (Model.oProducto.IdProducto == 0)
                {
                    <button class="btn btn-primary btn-sm m-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm m-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

        </form>
    </div>
</div>

